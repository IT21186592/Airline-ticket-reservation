/*---- main header ----*/

*{
   font-family: Arial, sans-serif;
   margin: 0;
   padding: 0;  
}

.header{
	min-height: 100vh;
	width: 100%;
	background-image: linear-gradient(rgba(4,9,30,0.7),rgba(4,9,30,0.7)),
	url(../images/subbanner.png);
	background-position: center;
	background-size: cover;
	position: relative;
	
} 

/*--- nav bar ---*/

nav{
	display: flex;
	padding: 2% 6%;
	justify-content: space-between;
	align-items: center;
}

nav img{
	width: 150px;
}

.nav-links{
	flex: 1;
	text-align: right;
}

.nav-links ul li{
	list-style: none;
	display: inline-block;
	padding: 8px 12px;
	position: relative;
}

.nav-links ul li a{
	color: #fff;
	text-decoration: none;
	font-size: 13px;
}

.nav-links ul li::after{
	content:'';
	width: 0%;
	height: 2px;
	background: #F8FD02;
	display: block;
	margin: auto;
	transition: 0.5s;
}

.nav-links ul li:hover::after{
	width: 100%;
}

/*--- header content ---*/
.logo img:50%;

.Sri-Lankan-Airlines-heading{
	width:90%;
	color: #fff;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	text-align: center;	
}

.Sri-Lankan-Airlines-heading h1{
	font-size: 62px;
}

.Sri-Lankan-Airlines-heading p{
	margin: 10px 0 40px;
	font-size: 14px;
	color: white;
}

.about-us-btn{
	display: inline-block;
	text-decoration: none;
	color: #fff;
	border: 1px solid #fff;
	padding: 12px 34px;
	font-size:  13px;
	background: transparent;
	position: relative;
	cursor: pointer;
}

.about-us-btn:hover{
	border: 1px solid #F8FD02;
	background: #F8FD02;
	color: #333;
    transition: 1s;	
}

/*---- Home page content ---*/

.homepage-desc{
	width: 80%;
	margin: auto;
	text-align: center;
	padding-top: 100px;
}

h1{
	font-size: 36px;
	font-weight: 600;
}

p{
	color: #777;
	font-size: 14px;
	font weight: 300;
	line-height: 22px;
	padding: 10px;
}

.row{
	margin: 5%;
	display: flex;
	justify-content: space-between;
}

.desc-col{
	flex-basis: 31%;
	background: #ffac47;
	border-radius: 10px;
	margin-bottom: 5%;
	padding: 20px 12px;
	box-sizing: border-box;
	transition: 0.5s;
}
h3{
	text-align: center;
	font-weight: 600;
	margin: 10px 0;	
}

.desc-col:hover{
	box-shadow: 0 0 20px 0px rgba(0,0,0,0.2);
}

.desc-btn{
	display: inline-block;
	text-decoration: none;
	color: white;
	border: 1px solid #ffac47;
	padding: 12px 34px;
	font-size:  13px;
	background: transparent;
	position: relative;
	cursor: pointer;
}

.desc-btn:hover{
	border: 1px solid #f44336;
	background: #f44336;
	color: black
    transition: 1s;	
}

/*---- Footer ---*/

.footer{
	left: 0;
    bottom: 0;
	background-color: #180d00;
	color: #fff;
	width: 100%;
	text-align: center;
	padding: 30px 0;
}

.footer h4{
	color:#fff;
	margin-bottom: 25px;
	margin-top: 20px;
	font-weight: 600;
}

.footer a{
	color: #fff;
	background-color: transparent;
	text-decoration: none;
}

.footer p{
	color:#fff;
}

.icons img{
	height: 50px;
	border radius: 50%;
	margin: 12px;
}